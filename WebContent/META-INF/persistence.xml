<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="org.hibernate.persistence.eDocsManager" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>br.com.fcmsistemas.proton.model.ConsumoDiario</class>
		<class>br.com.fcmsistemas.proton.model.Consumo</class>

		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/eDocsManager" />
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.password" value="admin" />
			<property name="hibernate.connection.username" value="eDocsManager" />
			<!-- <property name="hibernate.hbm2ddl.auto" value="create-drop" /> -->
		</properties>
	</persistence-unit>
</persistence>